{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["GITHUB_TOKEN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "persistent": true,
      "cache": false
    },
    "test:coverage": {
      "persistent": true,
      "cache": false
    }
  }
}
