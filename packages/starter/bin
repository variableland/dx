#!/bin/bash
# This bin script is intended to be used from the monorepo root directory
# as well as from the installed /bin directory

SCRIPT_DIR="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"

if [ "$ENV" = "dev" ]; then
    CAPTURED_PWD="$(pwd)"
    cd "$SCRIPT_DIR" && BIN_PATH="$SCRIPT_DIR" PWD="$CAPTURED_PWD" bun src/main.ts "$@"
else
    BIN_PATH="$SCRIPT_DIR" bun "$SCRIPT_DIR/dist/rr.mjs" "$@"
fi
